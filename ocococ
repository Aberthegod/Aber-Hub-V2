local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local whitelisted = {
   "abercke04"
}

if table.find(whitelisted, LocalPlayer.Name) then
   print("Welcome")
else
   LocalPlayer:Kick()
end

-- Ui Lib
local OrionLib = loadstring(game:HttpGet('https://raw.githubusercontent.com/shlexware/Orion/main/source'))()

-- Window
local Window = OrionLib:MakeWindow({
   Name = "Zaza Hub - Owner Version",
   HidePremium = false,
   SaveConfig = true,
   ConfigFolder = "OrionTest"
})

-- Farming Tab
local FarmingTab = Window:MakeTab({
   Name = "Farming",
   Icon = "rbxassetid://4483345998",
   PremiumOnly = false
})

-- Farming Section
local FarmingSection = FarmingTab:AddSection({
   Name = "Farming"
})

-- Farming Button
local RunService = game:GetService("RunService")

FarmingTab:AddButton({
    Name = "Farm",
    Callback = function()
        getgenv().tool = true
        OrionLib:MakeNotification({
            Name = "Farming Activated.",
            Content = "Farming "..LocalPlayer.Name.."!",
            Image = "rbxassetid://4483345998",
            Time = 5
        })
        local lastFired = 0
        while true do
            if tick() - lastFired >= 0.6 then
                lastFired = tick()
                for i,v in pairs(LocalPlayer.Character:GetChildren()) do
                    if v:IsA("Tool") then
                        v:Activate()
                    end
                end
            end
            RunService.Heartbeat:Wait()
        end
    end
})

FarmingTab:AddButton({
	Name = "Stop Farming!",
	Callback = function()
        getgenv().tool = false
        OrionLib:MakeNotification({
          Name = "Farming Deactivated.",
          Content = "Stopped Farming "..LocalPlayer.Name.."!",
          Image = "rbxassetid://4483345998",
          Time = 5
      })
  	end    
})

local Section = FarmingTab:AddSection({
	Name = "Equip Weights"
})

FarmingTab:AddButton({
	Name = "Equip!",
	Callback = function()
        _G.Equip = true
        while _G.Equip do
            wait()
            for i,v in pairs(game.Players.LocalPlayer.Backpack:GetChildren()) do
                if v.Name == "Double Weight" then v:Activate()
                    v.Parent = game.Players.LocalPlayer.Character
                end
            end
        end
        OrionLib:MakeNotification({
            Name = "Equip Activated.",
            Content = "Equipped Weights "..LocalPlayer.Name.."!",
            Image = "rbxassetid://4483345998",
            Time = 5
        })
  	end    
})

FarmingTab:AddButton({
	Name = "UnEquip!",
	Callback = function()
        _G.Equip = false
        OrionLib:MakeNotification({
            Name = "Equip Deactivated.",
            Content = "unEquipped Weights "..LocalPlayer.Name.."!",
            Image = "rbxassetid://4483345998",
            Time = 5
        })
  	end    
})
